<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAdmin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="50dp"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/rel1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/getMemberName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fietra Prabaskara"
                    android:fontFamily="@font/amaranth"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_below="@id/line1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <ImageView
                android:id="@+id/getFoto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/logo"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/getUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/amaranth"
                android:layout_weight="1"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/getBentuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maling Pentol"
            app:trimExpandedText="@string/sedikit"
            app:trimCollapsedText="@string/lengkap"
            app:colorClickableText="@color/main"
            app:trimMode="trimModeLength"
            app:trimLength="20"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/amaranth"
            android:layout_weight="1"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/getTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 day ago"
                android:textSize="14sp"
                android:fontFamily="@font/amaranth"
                android:layout_weight="0.03"/>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>