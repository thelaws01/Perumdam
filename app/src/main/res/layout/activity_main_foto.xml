<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.relex.photodraweeview.PhotoDraweeView
        android:id="@+id/photo_drawee_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:retryImageScaleType="fitXY"
        app:failureImage="@drawable/ic_launcher_foreground"
        app:failureImageScaleType="fitXY"
        app:placeholderImage="@drawable/loading"
        app:placeholderImageScaleType="fitXY"
        app:progressBarAutoRotateInterval="1000"
        app:progressBarImage="@drawable/loading"
        app:progressBarImageScaleType="centerInside"/>

</FrameLayout>